# --- ./.env ---

# Bedrock Environment
# Set the environment for Bedrock (development, staging, production)
WP_ENV=development

# WordPress URLs
WP_HOME=http://localhost
WP_SITEURL=http://localhost/wp

# Database Credentials
# Note: Bedrock uses DB_NAME, DB_USER, etc.
DB_NAME=wordpress_db
DB_USER=wordpress_user
DB_PASSWORD=wordpress_pass
DB_HOST=mysql

# Optional: You can generate these for a more secure installation
# using https://roots.io/salts.html
AUTH_KEY='generateme'
SECURE_AUTH_KEY='generatemi'
LOGGED_IN_KEY='generateme'
NONCE_KEY='generateme'
AUTH_SALT='generateme'
SECURE_AUTH_SALT='generateme'
LOGGED_IN_SALT='generateme'
NONCE_SALT='generateme'

# --- Environment variables for the container runtime ---
# These are not used by Bedrock directly but are good for reference.
RUNTIME_USER=www-data
RUNTIME_GROUP=www-data
BEDROCK_DIR=/app
HTTPD_LOGLEVEL=debug
PHP_FPM_LOGLEVEL=notice
TLS_HOST=localhost
